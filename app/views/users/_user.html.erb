<tr>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td>
    <div class="btn-group">
      <%= link_to('Edit', edit_user_path(user), class: 'btn btn-primary btn-mini') if can? :update, user %>
      <%= link_to('Delete', user_path(user), class: 'btn btn-danger btn-mini', method: :delete) if can? :destroy, user %>
    </div>
    <%= render_active_toggle(user) %>
  </td>
</tr>
